<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/userImg2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/usericon" />
    />
    <TextView
        android:id="@+id/userName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="aa"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/userImg2" />

    <Button
        android:id="@+id/acceptReqBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AcceptFriendRequest"
        android:onClick="actionMakeFriend"
        android:textColor="@android:color/white"
        android:background="@color/random_color_6"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
